         +PRINT_AT sMM10, 11, 5
         +PRINT_AT sMM12, 12, 5
         +PRINT_AT sMM14, 13, 5
         +PRINT_AT sMM7, 14, 5
         +DEBUGWAIT
         jmp   $ff59
iny16    jsr   iny8
iny8     jsr   iny4
iny4     iny
         iny
         iny
         iny
         rts

