;
; initialize program, generate lookup tables and dynamically generated code
;

         ldx   #$FF
         txs
         +READ_ROM_NO_WRITE
         sta   PRIMARYCHARSET
         sta   CLR80VID
         sta   STOREOFF
         sta   READMAINMEM
         sta   WRITEMAINMEM
         jsr   ROM_TEXT
         jsr   ROM_HOME
         jsr   ROM_NORMAL
         jsr   ROM_IN0
         jsr   ROM_PR0

         +BUILD_HGR_LOOKUP_TABLES HGRLO, HGRHI

         ; build EnableAccelerator and DisableAccelerator functions
         ; and copy them into place
         jsr   BuildAcceleratorFunction
         +ST16 @accelSrc
         dex
-
@accelSrc=*+1
         lda   $FDFD, x
         sta   DisableAccelerator, x
         dex
         bpl   -

         ; relocate rest of program code to $4000
-        inc   FM+2
         inc   FMDEST+2
         lda   FM+2
         cmp   #>LastMover
         bcc   -
         ldx   #$00
FM       lda   FirstMover, x
FMDEST   sta   $4000, x
         inx
         bne   FM
         dec   FM+2
         dec   FMDEST+2
         lda   FMDEST+2
         cmp   #$40
         bcs   FM

         ; disable accelerator for duration of play
         jsr   DisableAccelerator

         ; load random board for title (out of first 512 16x16 boards)
         lda   #kTitleBoardSize
         sta   logical_board_size
         lda   RNDSEED+1
         and   #1
         tay
         lda   RNDSEED
         ldx   #>kTitleBoardBuffer
         jsr   nth

         bit   CLEARKBD
         jmp   Start
