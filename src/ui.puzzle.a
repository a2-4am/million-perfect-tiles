DrawEntireBoard
         jsr   Home
         lda   #$FF                  ; /!\ assumes gCurrentBoard is page-aligned
         sta   @a+1
         ldx   #$0F
-        ldy   #$0F
@a       lda   gCurrentBoard
         and   #$7F
         cmp   #$01
         beq   @draw
         cmp   #$02
         bne   @nodraw
@draw    jsr   DrawLargeCharacter
@nodraw  dec   @a+1                  ; /!\ assumes gCurrentBoard is page-aligned
         dey
         bpl   @a
         dex
         bpl   -
         bit   GFXMODE
         rts
