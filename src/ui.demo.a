InitDemoBoard
         ldy   #$00
         lda   #$FF
@clear
         sta   kDemoBoardBuffer, y
         iny
         bne   @clear
         ldx   #$55
         ;Y=0
@load
         lda   kDemoData, y
         cmp   #$8D
         beq   @next
         cmp   #$FF
         beq   @done
         sta   kDemoBoardBuffer, x
@inc     iny
         inx
         bne   @load                 ; always branches
@done
         rts
@next
         txa
         clc
         adc   #$09
         tax
         bne   @inc                  ; always branches

